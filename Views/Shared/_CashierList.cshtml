@model IEnumerable<LW_1.Models.ViewModels.CashierVM>

<h3>
    Список работников
</h3>
<p>
    @Html.ActionLink("Create New", "CreateCashier", "Lab3")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Фамилия)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Имя)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Отчество)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Дата_рождения)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Пол)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Фамилия)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Имя)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Отчество)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Дата_рождения)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Пол)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Details", "CashierDetails", "Lab2V2", new { cashierId = item.Id }, null)
                if (User.IsInRole("admin"))
                {
                    <strong>|</strong>
                    @Html.ActionLink("Edit", "EditCashier", new { controller = "Lab4", cashierId = item.Id })
                    <strong>|</strong>
                    @Html.ActionLink("Delete", "DeleteCashier", new { controller = "Lab4", id = item.Id })
                }

            }
        </td>
    </tr>
}

</table>
